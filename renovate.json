{
  "extends": ["config:base"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies", "packageManager"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchUpdateTypes": ["lockFileMaintenance"],
      "automerge": true,
      "automergeType": "branch"
    }
  ],
  "prCreation": "not-pending",
  "stabilityDays": 3,
  "prNotPendingHours": 74,
  "timezone": "Europe/Oslo"
}
