{
  "extends": [
    "config:recommended"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies",
        "packageManager"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchUpdateTypes": [
        "lockFileMaintenance"
      ],
      "automerge": true,
      "automergeType": "branch"
    }
  ],
  "prCreation": "not-pending",
  "minimumReleaseAge": "3 days",
  "prNotPendingHours": 74,
  "timezone": "Europe/Oslo"
}
